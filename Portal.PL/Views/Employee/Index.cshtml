
@model List<GetAllEmployeeVM>
@{
    Layout="~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}


<style>
    #myTable thead {
        background:red !important
    }
</style>
<a class=" btn btn-success" asp-controller="Employee" asp-action="Create"   >Create</a>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">
           Get All Employee
        </h3>
        <div class="flex gap-3">
            <label class="switch switch-sm">
              
            </label>
        </div>
    </div>
    <div class="card-body">

        <table id="myTable" class="table align-middle text-gray-700 font-medium text-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">FName</th>
                    <th scope="col">LName</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.FName</td>
                        <td>@item.LName</td>
                        <td><img style="width:30px; width:30px" src="~/Files/Profiles/@item.Image" /></td>
                        <td><a asp-controller="Employee" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-warning">Edit</a></td>
                    </tr>

                }

            </tbody>
        </table>

    </div>
   
</div>


@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}