    <div class="card-body">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
        }else{




            <form asp-action="Edit" asp-controller="Employee">

                <div class="row">
                    <div class="col-4">
                        <div class="mb-5">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" placeholder="FName" asp-for="FName" />
                                <label asp-for="FName"></label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <div class="mb-5">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" placeholder="LName" asp-for="LName" />
                                <label asp-for="LName"></label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <div class="mb-5">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" placeholder="Age" asp-for="Age" />
                                <label asp-for="Age"></label>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-4">
                        <div class="mb-5">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" placeholder="Salary" asp-for="Salary" />
                                <label asp-for="Salary"></label>
                            </div>
                        </div>
                    </div>
                </div>







                <input type="submit" value="Save" />
                </form>
        }

